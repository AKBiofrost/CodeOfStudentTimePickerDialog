<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorSobrio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TimePicker"
            android:textColor="@color/colorAdvance"
            android:textSize="50sp"

            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="140dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="524dp" app:layout_constraintVertical_bias="0.554"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/text_Time"/>
    <Button
            android:text="TIMER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorSobrio"
            android:textColor="@color/colorAdvance"
            android:textSize="50sp"
            android:textStyle="italic"
            android:id="@+id/timer" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_Time" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="UnknownId"/>

</androidx.constraintlayout.widget.ConstraintLayout>